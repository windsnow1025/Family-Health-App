<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#000000"/>
            <corners
                android:radius="15dp"/>
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#B9B8B4"/>
            <corners
                android:radius="15dp"/>
        </shape>

    </item>
</selector>